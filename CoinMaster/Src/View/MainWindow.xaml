<Window x:Class="CoinMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:CoinMaster.Src.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow"
        ResizeMode="NoResize"
        Height="720"
        Width="1152">
    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>

    <Border Background="{StaticResource BackgroundDark}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="225" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="65" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border Background="{StaticResource BackgroundLight}"
                    Grid.Column="0"
                    Grid.Row="0" />

            <Border Background="{StaticResource BackgroundLight}"
                    Grid.Column="0"
                    Grid.Row="1" />

            <Image Grid.Row="0"
                   Grid.Column="0"
                   Source="../../Resources/Img/coin.png"
                   RenderOptions.BitmapScalingMode="HighQuality"
                   HorizontalAlignment="Left"
                   Height="45"
                   Width="45"
                   Margin="10,0,0,0" />

            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Text="{StaticResource AppName}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="{StaticResource White}"
                       FontSize="22"
                       Margin="65,0,0,0" />


            <StackPanel Grid.Row="1"
                        Grid.Column="0">

                <RadioButton Content="{StaticResource AddCoin}"
                             Style="{StaticResource MenuButtonTheme}" 
                             Command="{Binding AddCoinCommand}"/>

                <RadioButton Content="{StaticResource Dashboard}"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding HomeScreenCommand}"
                             IsChecked="True" />

                <RadioButton Content="{StaticResource MarketOverview}"
                             Style="{StaticResource MenuButtonTheme}" />
            </StackPanel>

            <ContentControl Grid.Row="0"
                            Grid.Column="1"
                            Grid.RowSpan="2"
                            Margin="10"
                            Content="{Binding CurrentView}" />
        </Grid>
    </Border>
</Window>