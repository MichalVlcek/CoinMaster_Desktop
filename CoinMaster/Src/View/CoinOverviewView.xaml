                    <TextBlock Style="{StaticResource BasicLabel}"
                               Text="Average Buy Price"
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource Grey}" />
                    <TextBlock Style="{StaticResource BasicLabel}"
                               Text="0.023 BTC"
                               HorizontalAlignment="Center"
                               FontSize="26" />
                </StackPanel>
            </Border>

            <Border Grid.Column="1"
                    Grid.Row="1"
                    Style="{StaticResource BoxBorder}"
                    BorderThickness="3,3,3,5">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Style="{StaticResource BasicLabel}"
                               Text="Current Deposit"
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource Grey}" />
                    <TextBlock Style="{StaticResource BasicLabel}"
                               Text="0.023 BTC"
                               HorizontalAlignment="Center"
                               FontSize="26" />
                </StackPanel>
            </Border>

            <Border Grid.Column="2"
                    Grid.Row="1"
                    Style="{StaticResource BoxBorder}"
                    BorderThickness="3,3,5,5">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Style="{StaticResource BasicLabel}"
                               Text="Percent Change"
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource Grey}" />
                    <TextBlock Style="{StaticResource BasicLabel}"
                               Text="0.023 BTC"
                               HorizontalAlignment="Center"
                               FontSize="26" />
                </StackPanel>
            </Border>
        </Grid>

        <TextBlock Grid.Row="2"
                   Style="{StaticResource BasicLabel}"
                   Text="General Overview"
                   HorizontalAlignment="Center"
                   FontSize="32" />

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
