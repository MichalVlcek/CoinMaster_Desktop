                            Orientation="Horizontal"
                            Margin="10,0,0,0">
                    <TextBlock Style="{StaticResource BasicLabel}"
                               Text="Rank:"
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource Grey}"
                               FontSize="14" />
